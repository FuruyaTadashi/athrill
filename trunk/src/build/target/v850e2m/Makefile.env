#
# Warning flags
#
WFLAGS			:= -g -Wall
WFLAGS			+= -Wunknown-pragmas
WFLAGS			+= -Wimplicit-int
WFLAGS			+= -Wtrigraphs

#
# Define flags
#
DFLAGS			:=

#
# ARCH
#
ARCH		:= v850e2m

#
# compiler
#
GCC			:= gcc
AR			:= ar
RANLIB			:= ranlib
CP			:= /bin/cp.exe
RM			:= /bin/rm.exe

#
# AR flags
#
AFLAGS			:= -rcSv

TARGET		:= athrill

LFLAGS	:= -Wl,--allow-multiple-definition
LFLAGS	+= -Wl,--enable-stdcall-fixup
#LIBS	:= -lpthread -lwsock32 -lws2_32
LIBS	:= -lpthread -lwsock32
LIBS	+= $(CAN_DBG_LIBS)

ifeq ($(gprof),true)
 include make_conf/gnu_profile.def
endif

.SUFFIXES:      .c .o

.c.o:	$<
	$(GCC) -O3 -c $(CFLAGS) $(DFLAGS) $<
